<?xml version="1.0" encoding="UTF-8" ?>
<rxui:ReactiveContentPage
    x:Class="CorellianSample.Views.HomeView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:vm="clr-namespace:CorellianSample.ViewModels"
    Title="Home"
    x:TypeArguments="vm:IHomeViewModel">
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="FirstModalButton"
                Command="{Binding OpenModal}"
                Text="First Modal" />
            <Button
                x:Name="PushPage"
                Command="{Binding PushPage}"
                Text="Push Red Page" />
        </StackLayout>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
