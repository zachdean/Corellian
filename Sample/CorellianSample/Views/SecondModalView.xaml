<?xml version="1.0" encoding="UTF-8" ?>
<rxui:ReactiveContentPage
    x:Class="CorellianSample.Views.SecondModalView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:vm="clr-namespace:CorellianSample.ViewModels"
    Title="Second Modal"
    x:TypeArguments="vm:ISecondModalViewModel">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding PassedParameter, StringFormat='The parameter passed is: {0}'}"
                   Margin="5"/>
            <Button x:Name="PushPage" Text="Push Page" />
            <Button x:Name="PopModal" Text="Pop Modal" />
        </StackLayout>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
