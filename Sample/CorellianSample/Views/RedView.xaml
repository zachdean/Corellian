<?xml version="1.0" encoding="UTF-8" ?>
<rxui:ReactiveContentPage
    x:Class="CorellianSample.Views.RedView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:vm="clr-namespace:CorellianSample.ViewModels"
    Title="First Modal"
    x:TypeArguments="vm:IRedViewModel">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Red">
            <Button
                x:Name="PopModal"
                Text="Pop Modal"
                TextColor="White" />
            <Button
                x:Name="PushPage"
                Text="Push Another Red Page"
                TextColor="White" />
            <Button
                x:Name="PopPage"
                Text="Pop Page"
                TextColor="White" />
            <Button
                x:Name="PopToRoot"
                Text="Pop To Root"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
